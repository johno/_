{
  "private": true,
  "name": "johno.com",
  "scripts": {
    "start": "gatsby develop",
    "build": "gatsby build",
    "deploy": "now switch johno && now && now alias $(pbpaste) johno.com && now alias $(pbpaste) www.johno.com",
    "now-build": "yarn build"
  },
  "dependencies": {
    "@theme-ui/components": "0.2.50",
    "gatsby": "2.18.25",
    "gatsby-plugin-fathom": "1.2.0",
    "gatsby-theme-austere": "0.0.11",
    "gatsby-theme-blog-tags": "0.0.11",
    "husky": "4.0.10",
    "lint-staged": "10.0.1",
    "prettier": "1.19.1",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "theme-ui": "0.2.52",
    "three": "0.112.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,md,mdx,json}": [
      "prettier --write --no-semi --single-quote",
      "git add"
    ]
  },
  "resolutions": {
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "@babel/helpers": "7.6.0",
    "@emotion/core": "10.0.27",
    "theme-ui": "0.2.52",
    "@theme-ui/components": "0.2.50"
  },
  "engines": {
    "node": "12.x"
  },
  "workspaces": [
    "packages/*"
  ]
}
